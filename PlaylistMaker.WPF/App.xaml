<!--
    App.xaml 是 WPF 应用程序的入口配置文件
    它定义了应用程序级别的资源（颜色、样式、画刷等），这些资源可以在整个应用中共享使用
    
    x:Class="PlaylistMaker.WPF.App" 指定了这个 XAML 文件对应的 C# 后台代码类
    xmlns 是 XML 命名空间的声明，类似于 C# 中的 using 语句
-->
<Application x:Class="PlaylistMaker.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:System="clr-namespace:System;assembly=System.Runtime"
             ShutdownMode="OnMainWindowClose">
    <!--
        ShutdownMode="OnMainWindowClose" 表示当主窗口关闭时，应用程序就会退出
        其他选项还有：
        - OnLastWindowClose：最后一个窗口关闭时退出
        - OnExplicitShutdown：只有显式调用 Shutdown() 才会退出
    -->
    
    <Application.Resources>
        <!--
            Application.Resources 是应用程序级别的资源字典
            在这里定义的资源可以在任何窗口、页面、控件中使用
            这是 WPF 资源共享机制的核心
        -->
        <ResourceDictionary>
            <!--
                ResourceDictionary.MergedDictionaries 允许我们合并多个资源字典
                这样可以将资源分散到多个文件中管理，保持代码整洁
            -->
            <ResourceDictionary.MergedDictionaries>
                <!-- 引入图标资源字典，包含应用程序的矢量图标 -->
                <ResourceDictionary Source="Resources/AppIcons.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!--
                Color 资源：定义颜色值
                x:Key 是资源的唯一标识符，其他地方通过这个 Key 来引用资源
                #FF4F46E5 是 ARGB 格式：FF=不透明度(255), 4F46E5=RGB颜色值
            -->
            <Color x:Key="AccentColor">#FF4F46E5</Color>
            
            <!--
                SolidColorBrush 是纯色画刷，用于填充背景、前景等
                画刷(Brush)是 WPF 中用于绑定颜色的重要概念
                DynamicResource 和 StaticResource 的区别：
                - StaticResource：编译时解析，性能更好，但不能动态更新
                - DynamicResource：运行时解析，可以动态更新（如主题切换）
            -->
            <SolidColorBrush x:Key="BaseBackgroundBrush" Color="#FFF8FAFC" />
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFFFF" />
            <!-- #1A 开头表示透明度约 10%（1A = 26/255 ≈ 10%） -->
            <SolidColorBrush x:Key="CardBorderBrush" Color="#1A0F172A" />
            <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="#FF0F172A" />
            <!-- #99 开头表示透明度约 60%（99 = 153/255 ≈ 60%） -->
            <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="#99374459" />
            <SolidColorBrush x:Key="AccentBrush" Color="#FF4F46E5" />
            
            <!--
                CornerRadius 定义圆角半径
                可以是单一值（四个角相同）或四个值（左上、右上、右下、左下）
            -->
            <CornerRadius x:Key="CardCornerRadius">16</CornerRadius>
            
            <!--
                Style 定义控件的外观样式
                TargetType 指定这个样式适用于哪种控件类型
                x:Key 是样式的名称，使用时通过 Style="{StaticResource SurfaceCardStyle}" 引用
            -->
            <Style x:Key="SurfaceCardStyle" TargetType="Border">
                <!--
                    Setter 用于设置控件的属性值
                    Property 是要设置的属性名
                    Value 是属性值，可以直接写值，也可以引用资源
                -->
                <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
                <Setter Property="CornerRadius" Value="{DynamicResource CardCornerRadius}" />
                <!-- Padding 是内边距，控件内容与边框的距离 -->
                <Setter Property="Padding" Value="18" />
                <!-- Margin 是外边距，控件与其他控件的距离 -->
                <Setter Property="Margin" Value="12" />
                <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}" />
                <Setter Property="BorderThickness" Value="1" />
                <!--
                    Effect 属性用于添加视觉效果
                    DropShadowEffect 是投影效果，让控件看起来有立体感
                -->
                <Setter Property="Effect">
                    <Setter.Value>
                        <!--
                            DropShadowEffect 参数说明：
                            - Color：阴影颜色（#33 表示约 20% 透明度的黑色）
                            - ShadowDepth：阴影偏移距离
                            - BlurRadius：模糊半径，值越大阴影越柔和
                        -->
                        <DropShadowEffect Color="#33000000" ShadowDepth="2" BlurRadius="12" />
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
