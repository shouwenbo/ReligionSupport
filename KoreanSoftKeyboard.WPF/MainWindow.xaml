<Window x:Class="KoreanSoftKeyboard.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoreanSoftKeyboard.WPF"
        mc:Ignorable="d"
        Icon="pack://application:,,,/Assets/app.ico"
        Title="韩语键盘对照表" 
        Width="{Binding RelativeSource={RelativeSource Self}, Path=Height, Converter={StaticResource RatioConverter}}"
        Height="420"
        WindowStyle="None" 
        ResizeMode="NoResize"
        Background="#ECECEC" 
        Topmost="True">

    <Window.Resources>
        <local:RatioConverter x:Key="RatioConverter" />
    </Window.Resources>

    <Border BorderBrush="#A5A5A5" BorderThickness="1" CornerRadius="3" Background="#ECECEC" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <DockPanel>
            <!-- 顶部蓝色条 -->
            <DockPanel DockPanel.Dock="Top" Background="#3A6EA5" Height="26" VerticalAlignment="Top">
                <TextBlock x:Name="TitleTextBlock" Text="韩语键盘对照表" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,6,0">
                    <Button Content="—" Click="BtnMin_Click" Width="28" Height="18" Margin="0,0,2,0"
                            Background="#2F5683" Foreground="White" BorderBrush="#1E3E66" BorderThickness="1"/>
                    <Button Content="×" Click="BtnClose_Click" Width="28" Height="18"
                            Background="#D9534F" Foreground="White" BorderBrush="#B52E2A" BorderThickness="1"/>
                </StackPanel>
            </DockPanel>

            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Vertical" Margin="8">
                    <ItemsControl x:Name="RowPanel" />
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Border>
</Window>
